<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_liquid">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bg_glass_panel"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp">

                <View
                    android:id="@+id/status_dot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_glass_panel"
                    android:backgroundTint="#333333" />

                <EditText
                    android:id="@+id/ip_input"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="SEARCHING..."
                    android:textColor="@color/text_main"
                    android:textColorHint="@color/text_muted"
                    android:letterSpacing="0.1"
                    android:inputType="number"
                    android:imeOptions="actionDone"/>

                <TextView
                    android:id="@+id/btn_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LINK"
                    android:textColor="@color/text_main"
                    android:background="@drawable/bg_glass_panel"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_glass_panel"
                android:gravity="center">

                <TextView
                    android:id="@+id/tab_nav"
                    android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent"
                    android:text="NAV" android:gravity="center" android:textColor="@color/text_main"
                    android:background="@drawable/selector_tab"
                    android:clickable="true" android:focusable="true"/>

                <TextView
                    android:id="@+id/tab_touch"
                    android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent"
                    android:text="TOUCH" android:gravity="center" android:textColor="@color/text_main"
                    android:background="@drawable/selector_tab"
                    android:clickable="true" android:focusable="true"/>

                <TextView
                    android:id="@+id/tab_type"
                    android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent"
                    android:text="TYPE" android:gravity="center" android:textColor="@color/text_main"
                    android:background="@drawable/selector_tab"
                    android:clickable="true" android:focusable="true"/>
            </LinearLayout>
        </LinearLayout>

        <ViewFlipper
            android:id="@+id/view_flipper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintBottom_toTopOf="@id/dock">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingBottom="50dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="280dp"
                        android:layout_height="280dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_glass_panel"
                        android:backgroundTint="#101015">

                        <View
                            android:id="@+id/btn_ok"
                            android:layout_width="90dp" android:layout_height="90dp"
                            android:background="@drawable/bg_glass_panel"
                            android:backgroundTint="#000"
                            android:clickable="true" android:focusable="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:text="OK" android:textColor="#888" android:textStyle="bold"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@id/btn_ok"
                            app:layout_constraintEnd_toEndOf="@id/btn_ok"
                            app:layout_constraintStart_toStartOf="@id/btn_ok"
                            app:layout_constraintTop_toTopOf="@id/btn_ok"/>

                        <ImageButton android:id="@+id/btn_up"
                            android:layout_width="60dp" android:layout_height="60dp"
                            android:src="@android:drawable/arrow_up_float" app:tint="#888"
                            android:background="?selectableItemBackgroundBorderless"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
                            
                        <ImageButton android:id="@+id/btn_down"
                            android:layout_width="60dp" android:layout_height="60dp"
                            android:src="@android:drawable/arrow_down_float" app:tint="#888"
                            android:background="?selectableItemBackgroundBorderless"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

                        <ImageButton android:id="@+id/btn_left"
                            android:layout_width="60dp" android:layout_height="60dp"
                            android:src="@android:drawable/ic_media_rew" app:tint="#888"
                            android:background="?selectableItemBackgroundBorderless"
                            android:layout_marginStart="10dp"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

                        <ImageButton android:id="@+id/btn_right"
                            android:layout_width="60dp" android:layout_height="60dp"
                            android:src="@android:drawable/ic_media_ff" app:tint="#888"
                            android:background="?selectableItemBackgroundBorderless"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="40dp"
                        android:layout_marginTop="40dp"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="75dp" android:layout_height="180dp"
                            android:background="@drawable/bg_glass_panel"
                            android:orientation="vertical" android:gravity="center">
                            <ImageButton android:id="@+id/btn_vol_up" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:src="@android:drawable/ic_input_add" app:tint="#666" android:background="?selectableItemBackground"/>
                            <TextView android:text="VOL" android:textSize="10sp" android:textColor="#444"/>
                            <ImageButton android:id="@+id/btn_vol_down" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:src="@android:drawable/ic_delete" app:tint="#666" android:background="?selectableItemBackground"/>
                        </LinearLayout>

                        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" />

                        <ImageButton
                            android:id="@+id/btn_mute"
                            android:layout_width="70dp" android:layout_height="70dp"
                            android:background="@drawable/bg_glass_panel"
                            android:src="@android:drawable/ic_lock_silent_mode_off"
                            app:tint="#666" />

                        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="75dp" android:layout_height="180dp"
                            android:background="@drawable/bg_glass_panel"
                            android:orientation="vertical" android:gravity="center">
                            <ImageButton android:id="@+id/btn_ch_up" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:src="@android:drawable/arrow_up_float" app:tint="#666" android:background="?selectableItemBackground"/>
                            <TextView android:text="CH" android:textSize="10sp" android:textColor="#444"/>
                            <ImageButton android:id="@+id/btn_ch_down" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:src="@android:drawable/arrow_down_float" app:tint="#666" android:background="?selectableItemBackground"/>
                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="SOURCES" android:gravity="center" android:textColor="#33FFFFFF"
                        android:layout_marginTop="30dp" android:letterSpacing="0.2"/>

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:padding="20dp"
                        android:alignmentMode="alignMargins">

                        <LinearLayout
                            android:id="@+id/btn_netflix"
                            android:layout_width="0dp" android:layout_columnWeight="1"
                            android:layout_height="100dp"
                            android:background="@drawable/selector_btn_netflix"
                            android:gravity="center" android:orientation="vertical"
                            android:layout_margin="8dp" android:clickable="true" android:focusable="true">
                            <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@android:drawable/ic_media_play" app:tint="@color/netflix_border"/>
                            <TextView android:text="Netflix" android:textColor="#999" android:textSize="10sp" android:layout_marginTop="8dp"/>
                        </LinearLayout>
                        
                        <LinearLayout
                            android:id="@+id/btn_youtube"
                            android:layout_width="0dp" android:layout_columnWeight="1"
                            android:layout_height="100dp"
                            android:background="@drawable/bg_glass_panel"
                            android:gravity="center" android:orientation="vertical"
                            android:layout_margin="8dp" android:clickable="true" android:focusable="true">
                            <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@android:drawable/ic_media_play" app:tint="@color/youtube_border"/>
                            <TextView android:text="YouTube" android:textColor="#999" android:textSize="10sp" android:layout_marginTop="8dp"/>
                        </LinearLayout>

                        </GridLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:padding="30dp" android:gravity="center">
                <View
                    android:id="@+id/touch_pad_surface"
                    android:layout_width="match_parent" android:layout_height="300dp"
                    android:background="@drawable/bg_glass_panel"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:padding="30dp" android:gravity="center" android:orientation="vertical">
                <EditText
                    android:id="@+id/input_keyboard"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:background="@drawable/bg_glass_panel"
                    android:padding="24dp" android:hint="Type on TV..." android:textColor="#FFF" android:textColorHint="#555"/>
                <Button android:id="@+id/btn_send_text" android:text="SEND" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp"/>
            </LinearLayout>

        </ViewFlipper>

        <LinearLayout
            android:id="@+id/dock"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/bg_glass_panel"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton android:id="@+id/btn_power"
                android:layout_width="50dp" android:layout_height="50dp"
                android:src="@android:drawable/ic_lock_power_off" app:tint="@color/power_red"
                android:background="?selectableItemBackgroundBorderless"/>
                
            <ImageButton android:id="@+id/btn_back"
                android:layout_width="50dp" android:layout_height="50dp" android:layout_marginStart="20dp"
                android:src="@android:drawable/ic_menu_revert" app:tint="#888"
                android:background="?selectableItemBackgroundBorderless"/>
                
            <ImageButton android:id="@+id/btn_home"
                android:layout_width="50dp" android:layout_height="50dp" android:layout_marginStart="20dp"
                android:src="@android:drawable/ic_menu_agenda" app:tint="#888"
                android:background="?selectableItemBackgroundBorderless"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/splash_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/void_bg"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/bg_loader_ring" />
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIQUID OBSIDIAN"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:letterSpacing="0.4"
            android:textSize="12sp"
            android:textColor="@color/text_muted"/>
    </FrameLayout>

</FrameLayout>
